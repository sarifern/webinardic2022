{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.2",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Image",
                            "url": "{{ team_details['flag'] }}",
                            "size": "Small"
                        }
                    ],
                    "width": "stretch"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "size": "ExtraLarge",
                            "weight": "Bolder",
                            "text": "{{ team_details['name_en'] }}",
                            "horizontalAlignment": "Left",
                            "color": "Accent"
                        }
                    ],
                    "width": 6,
                    "horizontalAlignment": "Left"
                }
            ]
        },
