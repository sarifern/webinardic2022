{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [{
            "type": "Container",
            "items": [{
                "type": "ColumnSet",
                "columns": [{
                        "type": "Column",
                        "items": [{
                            "type": "Image",
                            "url": "{{ team_details['flag'] }}",
                            "size": "Small"
                        }],
                        "width": "stretch"
                    },
                    {
                        "type": "Column",
                        "items": [{
                            "type": "TextBlock",
                            "size": "ExtraLarge",
                            "weight": "Bolder",
                            "text": "{{ team_details['name_en'] }}",
                            "horizontalAlignment": "Left",
                            "color": "Accent"
                        }],
                        "width": 6

                    }
                ]
            }]
        },
        {
            "type": "Container",
            "items": [{
                "type": "ColumnSet",
                "columns": [{
                        "type": "Column",
                        "width": "stretch",
                        "items": [{
                                "type": "TextBlock",
                                "text": "Juegos Jugados",
                                "wrap": true,
                                "isSubtle": true,
                                "size": "Small",
                                "color": "Light",
                                "horizontalAlignment": "Center"
                            },
                            {
                                "type": "TextBlock",
                                "text": "{{ team_details['mp'] }}",
                                "wrap": true,
                                "separator": true,
                                "horizontalAlignment": "Center"
                            }
                        ]
                    },
                    {
                        "type": "Column",
                        "width": "stretch",
                        "items": [{
                                "type": "TextBlock",
                                "text": "Juegos Ganados",
                                "wrap": true,
                                "isSubtle": true,
                                "size": "Small",
                                "color": "Light",
                                "horizontalAlignment": "Center"
                            },
                            {
                                "type": "TextBlock",
                                "text": "{{ team_details['w'] }}",
                                "wrap": true,
                                "separator": true,
                                "horizontalAlignment": "Center"
                            }
                        ]
                    },
                    {
                        "type": "Column",
                        "width": "stretch",
                        "items": [{
                                "type": "TextBlock",
                                "text": "Juegos Empatados",
                                "wrap": true,
                                "isSubtle": true,
                                "size": "Small",
                                "color": "Light",
                                "horizontalAlignment": "Center"
                            },
                            {
                                "type": "TextBlock",
                                "text": "{{ team_details['d'] }}",
                                "wrap": true,
                                "separator": true,
                                "horizontalAlignment": "Center"
                            }
                        ]
                    },
                    {
                        "type": "Column",
                        "width": "stretch",
                        "items": [{
                                "type": "TextBlock",
                                "text": "Juegos Perdidos",
                                "wrap": true,
                                "isSubtle": true,
                                "size": "Small",
                                "color": "Light",
                                "horizontalAlignment": "Center"
                            },
                            {
                                "type": "TextBlock",
                                "text": "{{ team_details['l'] }}",
                                "wrap": true,
                                "separator": true,
                                "horizontalAlignment": "Center"
                            }
                        ]
                    }
                ]
            }]
        },
        {
            "type": "Container",
            "items": [{
                "type": "ColumnSet",
                "columns": [{
                        "type": "Column",
                        "width": "stretch",
                        "items": [{
                                "type": "TextBlock",
                                "text": "Goles a \n Favor",
                                "wrap": true,
                                "isSubtle": true,
                                "size": "Small",
                                "color": "Light",
                                "horizontalAlignment": "Center"
                            },
                            {
                                "type": "TextBlock",
                                "text": "{{ team_details['gf'] }}",
                                "wrap": true,
                                "separator": true,
                                "horizontalAlignment": "Center"
                            }
                        ]
                    },
                    {
                        "type": "Column",
                        "width": "stretch",
                        "items": [{
                                "type": "TextBlock",
                                "text": "Goles en \n Contra",
                                "wrap": true,
                                "isSubtle": true,
                                "size": "Small",
                                "color": "Light",
                                "horizontalAlignment": "Center"
                            },
                            {
                                "type": "TextBlock",
                                "text": "{{ team_details['ga'] }}",
                                "wrap": true,
                                "separator": true,
                                "horizontalAlignment": "Center"
                            }
                        ]
                    },
                    {
                        "type": "Column",
                        "width": "stretch",
                        "items": [{
                                "type": "TextBlock",
                                "text": "Diferencia \n de Goles",
                                "wrap": true,
                                "isSubtle": true,
                                "size": "Small",
                                "color": "Light",
                                "horizontalAlignment": "Center"
                            },
                            {
                                "type": "TextBlock",
                                "text": "{{ team_details['gd'] }}",
                                "wrap": true,
                                "separator": true,
                                "horizontalAlignment": "Center"
                            }
                        ]
                    },
                    {
                        "type": "Column",
                        "width": "stretch",
                        "items": [{
                                "type": "TextBlock",
                                "text": "Puntos\n",
                                "wrap": true,
                                "isSubtle": true,
                                "size": "Small",
                                "color": "Light",
                                "horizontalAlignment": "Center"
                            },
                            {
                                "type": "TextBlock",
                                "text": "{{ team_details['pts'] }}",
                                "wrap": true,
                                "separator": true,
                                "horizontalAlignment": "Center"
                            }
                        ]
                    }
                ]
            }]
        }

    ]
}